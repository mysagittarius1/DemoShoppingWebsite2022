
@{
    ViewBag.Title = "GoogleMap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Always set the map height explicitly to define the size of the div
        * element that contains the map. */
    #map {

        margin-top:100px;
        height: 400px;
        width: 600px;
    }
    /* Optional: Makes the sample page fill the window. */
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }
</style>

<div id="map"></div>
<script>
    var map;
    function initMap() {
        var latlng = { lat: 22.997091, lng: 120.213 }
        map = new google.maps.Map(document.getElementById('map'), {
            center: latlng ,
            zoom: 17
        });
        new google.maps.Marker({
            position: latlng,	//marker的放置位置
            map: map //這邊的map指的是第四行的map變數
        });
    }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC3SYp-CCif8tN9aT0lGa54YvEQoa-K6_4&callback=initMap"
        async defer></script>
